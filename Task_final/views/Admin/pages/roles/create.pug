extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main 
    if(role.permissions.includes("roles_create"))
        +alert-error(5000)
        +alert-success(5000)
        .card.mb-4 
            .card-header Thông tin tài khoản 
            .card-body 
                if(user.avatar)
                    img(
                        src=user.avatar 
                        style="height: 100px; margin-bottom: 15px;"
                    )
                if(user.fullName)
                    p Họ tên: <b>#{user.fullName}</b>
                if(user.email)
                    p Email: <b>#{user.email}</b>
                if(user.phone)
                    p Số điện thoại: <b>#{user.phone}</b>
                if(role.title)
                    p Phân quyền: <b>#{role.title}</b>
        h1(class="mb-4") Thêm mới nhóm quyền 

        form(
            action=`${prefixAdmin}/roles/create`
            method="POST"
        )
            div(class="form-group")
                label(for="title") Tiêu đề
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                )
            div(class="form-group")
                label(for="desc") Mô tả
                input(
                    type="text"
                    class="form-control"
                    id="desc"
                    name="description"
                )
            div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới
    else    
        h1 Bạn không có quyền